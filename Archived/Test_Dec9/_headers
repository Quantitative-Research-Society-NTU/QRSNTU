# Cache control for GitHub Pages deployment

# HTML files - cache for 5 minutes
/*.html
  Cache-Control: public, max-age=300, must-revalidate

# JavaScript files - cache for 1 year (use versioning to bust cache)
/*.js
  Cache-Control: public, max-age=31536000, immutable

# CSS files - cache for 1 year (use versioning to bust cache)
/*.css
  Cache-Control: public, max-age=31536000, immutable

# JSON data files - no cache (always fresh)
/*.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Image files - cache for 1 month
/*.png
  Cache-Control: public, max-age=2592000

/*.jpg
  Cache-Control: public, max-age=2592000

/*.svg
  Cache-Control: public, max-age=2592000
